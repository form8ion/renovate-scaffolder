{
  "name": "@form8ion/renovate-scaffolder",
  "description": "opinionated scaffolder for enabling Renovate on a project",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^16.14 || >=18"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/renovate-scaffolder",
  "bugs": "https://github.com/form8ion/renovate-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/renovate-scaffolder",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "pregenerate:md": "run-s build",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install",
    "lint:publish": "publint --strict",
    "lint:engines": "ls-engines",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "lint:gherkin": "gherkin-lint --config=.gherkin-lintrc.json"
  },
  "files": [
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@form8ion/config-file": "^1.0.1",
    "@form8ion/core": "^3.0.0",
    "@travi/cli-messages": "^1.0.2",
    "deepmerge": "^4.3.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "9.5.1",
    "@form8ion/commitlint-config": "1.0.55",
    "@form8ion/eslint-config": "6.0.3",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/remark-lint-preset": "6.0.0",
    "@rollup/plugin-node-resolve": "15.2.1",
    "@travi/any": "2.1.9",
    "ban-sensitive-files": "1.10.0",
    "c8": "8.0.1",
    "chai": "4.3.8",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "8.0.3",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.12.1",
    "ls-engines": "0.9.0",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.0.6",
    "publint": "0.2.2",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1",
    "remark-usage": "10.0.1",
    "rimraf": "5.0.1",
    "rollup": "3.29.0",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "0.34.3"
  }
}
